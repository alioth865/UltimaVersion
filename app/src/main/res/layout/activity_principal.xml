<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootPane"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alioth.ultimaversion.Todo.Vistas.Principal">

    <RelativeLayout
        android:id="@+id/contenedor"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/barraMenu"></RelativeLayout>

    <GridLayout
        android:id="@+id/barraMenu"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffcfff10"
        android:columnCount="2"
        android:rowCount="1"
        android:paddingTop="4dp">

        <ImageButton android:id="@+id/btn_producto"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:src="@drawable/ic_action_tshirt"
            android:scaleType="fitCenter"
            android:background="#ffcfff10"
            android:text="New Button"
            />

        <ImageButton android:id="@+id/btn_cliente"
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:src="@drawable/ic_action_users"
            android:scaleType="fitCenter"
            android:background="#ffcfff10"/>




    </GridLayout>
</RelativeLayout>
